<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Category</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= article.category %></td>
        <td><%= article.user_id %></td>
        <td><%= link_to 'Show', article, class: "btn btn-small waves-effect waves-light" %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: "btn waves-effect waves-light" if editor? && article.user_id == current_user.id%></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn waves-effect waves-light" if editor? && article.user_id == current_user.id%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, class: "btn waves-effect waves-light" if editor? %>
